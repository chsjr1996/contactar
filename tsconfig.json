{
  "compilerOptions": {
    "target": "es5",
    "module": "ES6",
    "moduleResolution": "Node",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./resources/js",
    "paths": {
      "@Root/*": ["*"],
      "@Config/*": ["Configs/*"],
      "@Interface/*": ["Interfaces/*"],
      "@Layout/*": ["Layouts/*"],
      "@Page/*": ["Pages/*"],
      "@Component/*": ["Components/*"],
      "@Style/*": ["Styles/*"],
      "@Service/*": ["Services/*"],
    }
  },
  "include": [
    "resources/assets",
    "resources/js"
  ],
  "exclude": [
    "node_modules"
  ]
}
